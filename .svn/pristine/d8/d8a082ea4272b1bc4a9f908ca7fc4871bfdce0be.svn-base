.zhfc-images {
    position: relative;
    font-size: 14px;

    .title {
        color: $primary-text-blod-color;
        font-weight: 600;
    }

    .content {
        margin-left: 10px;
        color: $primary-text-color;
        max-width: 240px;

    }

    .image-title_type_a {
        position: relative;
        display: block;
        height: 54px;
        margin-top: 18px;
        line-height: 36px;

        .save {
            position: absolute;
            right: 0;

        }
    }

    .image-title_type_b {
        position: relative;
        display: block;
        height: 132px;
        margin-top: 18px;

        .housing {
            position: absolute;
            left: 260px;
        }
    }

    .tool {
        position: absolute;
        top: 18px;
        right: 18px;
        width: 27px;
        height: 15px;
        color: $primary-color;

        .el-dropdown-link {
            display: block;
            height: 15px;
            width: 30px;
            line-height: 18px;
            cursor: pointer;
            border-radius: 4px;
            background-color: #ffffff;

            box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.05);
        }

        .zhfc_dot {
            display: inline-block;
            text-align: center;
            line-height: 15px;
            width: 3px;
            height: 3px;
            margin-right: 3px;
            background-color: $primary-color;
            border-radius: 50%;
            margin-bottom: 5px;

            &:first-child {
                margin-left: 8px;
            }
        }

    }
}