@mixin hover {
    // & .el-input__inner:focus+.el-input__suffix {
    //     .zhfc-icon-search {
    //         display: none;
    //     }
    // }

    .el-input__inner {
        padding-left: 12px;
    }

    & .el-input__inner:hover {
        border-color: $primary-color
    }

    & .el-textarea__inner:hover {
        border-color: $primary-color;
    }

    &.is-disabled .el-input__inner:hover {
        border-color: #E4E7ED
    }

    // .zhfc-icon-search {
    //     display: inline-block;
    //     background: url(data:image/png;base64,) no-repeat center;
    // }

}

.zhfc-input.el-input {
    @include hover;
    @include zhfc-input-inner
}

.zhfc-input.el-input.el-input--prefix .el-input__inner {
    padding-left: 30px;
}

.zhfc-form .el-input {
    @include hover;

}

.zhfc-input.el-textarea {
    @include hover;
    .el-textarea__inner {
        border-radius: 2px;
    }

}