<template>
  <div class="home-wrap">
    <main-panel-default type="2">
      <template slot="headerForm">
          <el-form ref="queryForm" :inline="true" :model="queryForm">
            <el-form-item>
              <el-select
                v-model="queryForm.qy"
                placeholder="请选择区域"
                style="width:120px"
                clearable
              >
                <el-option
                  v-for="item in regions"
                  :key="item.value"
                  :label="item.name"
                  :value="item.value"
                />
              </el-select>
            </el-form-item>
            <el-form-item>
              <el-select
                v-model="queryForm.zt"
                placeholder="请选择状态"
                style="width:120px"
                clearable
              >
                <el-option
                  v-for="item in status"
                  :key="item.value"
                  :label="item.name"
                  :value="item.value"
                />
              </el-select>
            </el-form-item>
            <el-form-item>
              <el-input
                icon="el-icon-search"
                v-model="queryForm.mc"
                placeholder="可通过开发企业名称、项目名称、坐落搜索项目"
                style="width: 350px"
                clearable
              >
                <i slot="prefix" class="el-input__icon el-icon-search"></i>
              </el-input>
            </el-form-item>
            <el-form-item>
              <el-button type="primary" round icon="el-icon-search" @click="search">搜索</el-button>
              <el-button  round icon="el-icon-refresh-right" @click="reset">重置</el-button>
            </el-form-item>
          </el-form>
      </template>
      <template slot="leftAction">
        <el-button type="primary" round icon="el-icon-circle-check">受理</el-button>
        <el-button type="primary" round icon="el-icon-circle-plus-outline">新增</el-button>
      </template>
      <template slot="rightAction">
        <el-button type="info" round  icon="el-icon-edit-outline">修改模块名称</el-button>
        <el-button type="info" round  icon="el-icon-delete">批量删除</el-button>
        <el-button type="info" round  icon="el-icon-time">历史记录</el-button>
      </template>

        <el-table
          
          v-loading="loading"
          ref="table"
          border
          :data="tableData"
          height="100%"
        >
          <el-table-column type="selection" width="55" align="center"></el-table-column>
          <el-table-column label="业务编号" width="120" prop="ywbh" align="center" />
          <el-table-column label="项目编号" width="120" prop="xmbh" align="center" />
          <el-table-column label="项目名称" width="120" prop="xmmc" align="center" />
          <el-table-column label="开发企业名称" width="120" prop="kfqymc" align="center" />
          <el-table-column label="区域" width="120" prop="qy" align="center" />
          <el-table-column label="坐落" width="200" prop="zl" align="center" />
          <el-table-column label="楼栋数量" sortable width="120" prop="ldsl" align="center" />
          <el-table-column label="房屋数量" width="120" prop="fwsl" align="center" />
          <el-table-column label="状态" width="120" prop="zt" align="center" />
          <el-table-column label="操作" width="180" fixed="right" align="center">
            <template slot-scope="scope">
              <el-button
                @click="handleClick(scope.row)"
                type="text"
                size="small"
              >查看</el-button>
              <el-button
                @click="handleClick(scope.row)"
                type="text"
                size="small"
              >删除</el-button>
              <el-dropdown size="small" trigger="click" placement="bottom">
                <el-button type="text" size="small">更多...</el-button>
                <el-dropdown-menu slot="dropdown">
                  <el-dropdown-item @click.native="handleClick(scope.row)">
                    <span>审核</span>
                  </el-dropdown-item>
                  <el-dropdown-item @click.native="handleClick(scope.row)">
                    <span>提交备案</span>
                  </el-dropdown-item>
                </el-dropdown-menu>
              </el-dropdown>
            </template>
          </el-table-column>
        </el-table>
     
      <template slot="footer">
        <el-pagination
          :pager-count="5"
          layout="total, prev, pager, next, jumper, sizes"
          :total="totalCount"
          :page-size.sync="pageSize"
          :current-page.sync="currentIndex"
          @current-change="getPagedData"
        />
      </template>
    </main-panel-default>
  </div>
</template>

<script>
export default {
  name: "Dashboard",
  data() {
    return {
      queryForm: {
        qy: "",
        zt: "",
        mc: ""
      },
      regions: [
        { name: "福田区", value: "1" },
        { name: "南山区", value: "2" }
      ],
      status: [
        { name: "在办", value: "1" },
        { name: "已完成", value: "2" }
      ],
      loading: false,
      totalCount: 0,
      currentIndex: 1,
      pageSize: 20,
      tableData: []
    };
  },
  mounted() {
    this.search();
  },
  methods: {
    async search() {
      const data = await this.getPagedData(1);
      this.totalCount = data.totalCount;
      this.currentIndex = 1;
    },
    getPagedData(pageNo = 1) {
      this.loading = true;
      return new Promise(resolve => {
        setTimeout(() => {
          const result = Array.from({ length: 10 }).map((m, index) => ({
            id: (pageNo - 1) * 10 + index,
            ywbh: `业务编号${index}`,
            xmbh: `项目编号${index}`,
            xmmc: `项目名称${index}`,
            kfqymc: `开发企业名称${index}`,
            qy: `区域${index}`,
            zl: `坐落${index}`,
            ldsl: `楼栋数量${index}`,
            fwsl: `房屋数量${index}`,
            zt: `状态${index}`
          }));

          this.tableData = result;
          this.loading = false;

          resolve({
            totalCount: 200,
            result
          });
        }, 1000);
      });
    },
    reset() {
      this.queryForm.qy = "";
      this.queryForm.zt = "";
      this.queryForm.mc = "";
    },
    handleClick() {}
  }
};
</script>

