@mixin hover {

    .el-input__inner:hover {
        border-color: $primary-color
    }
    
    &.is-disabled .el-input__inner:hover {
        border-color: #E4E7ED
    }
    .el-select__tags {
        .el-tag.el-tag--info {
            background-color: #E6F7FF;
            border-color: #E6F7FF;
            color: $primary-color;
        }
        .el-tag.el-tag--info .el-tag__close {
            color: $primary-color;
            background-color: #E6F7FF;
            font-weight: 600;
        }
    }
    & .el-select__caret.is-reverse {
        color: $primary-color;
    }
}


.zhfc-select.el-select {
    @include zhfc-input-inner;
    @include hover;
}
.zhfc-form .el-select {
    @include zhfc-input-inner;
     @include hover;
}

