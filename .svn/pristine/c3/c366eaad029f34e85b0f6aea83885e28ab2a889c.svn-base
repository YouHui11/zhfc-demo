      async search() {
        const data = await this.getPagedData(1);
        this.totalCount = data.totalCount;
        this.currentIndex = 1;
      },
      getPagedData(pageNo = 1) {
        this.loading = true;
        return new Promise((resolve) => {
          setTimeout(() => {
            const result = Array.from({
              length: 10,
            }).map((m, index) => ({
              id: (pageNo - 1) * 10 + index,
              ywbh: `业务编号${index}`,
              xmbh: `项目编号${index}`,
              xmmc: `项目名称${index}`,
              kfqymc: `开发企业名称${index}`,
              qy: `区域${index}`,
              zl: `坐落${index}`,
              ldsl: `楼栋数量${index}`,
              fwsl: `房屋数量${index}`,
              zt: `状态${index}`,
            }));

            this.tableData = result;
            this.loading = false;

            resolve({
              totalCount: 20,
              result,
            });
          }, 1000);
        });
      },
      reset() {
        this.queryForm.qy = "";
        this.queryForm.zt = "";
        this.queryForm.mc = "";
      },
      handleClick() {},
      delClick() {
        this.$alert("这是一段内容", "标题名称", {
          // confirmButtonText: "确定",
          callback: (action) => {
            this.$message({
              type: "info",
              message: `action: ${action}`,
            });
          },
        });
      },
    },
  };
