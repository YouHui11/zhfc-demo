.el-form-item__label {
    color: $primary-text-color !important;
    font-size: 14px;
    display: inline-block !important;
}

.el-input__inner {
    color: $primary-text-color;
}

.el-icon-arrow-up:before {
    content: "\e78f" !important;
}

.el-form-item--medium.whiteSpace .el-form-item__label {
    line-height: 18px;
}

.el-form-item--small.whiteSpace .el-form-item__label {
    line-height: 16px;
}

.el-form-item--mini.whiteSpace .el-form-item__label {
    line-height: 14px;
}


.el-form-item.is-error .zhfc-input .el-input__inner,
.el-form-item.is-error .zhfc-input .el-input__inner:focus,
.el-form-item.is-error .zhfc-input .el-textarea__inner,
.el-form-item.is-error .zhfc-input .el-textarea__inner:focus,
.el-message-box__input input.invalid,
.el-message-box__input input.invalid:focus {
    border-color: #F56C6C
}

.el-select-dropdown__item {
    height: 36px !important;
}

.el-select-dropdown__item.hover,
.el-select-dropdown__item:hover {
    background-color: #E6F7FF !important;
}

// 日期选择器弹出背景色修改
.el-date-table td.in-range div,
.el-date-table td.in-range div:hover,
.el-date-table.is-week-mode .el-date-table__row.current div,
.el-date-table.is-week-mode .el-date-table__row:hover div {
    background-color: #E6F7FF !important;
}

.el-date-table td.in-range div:hover span,
.el-date-table__row div:hover span {
    border: 1px solid #1890FF !important;

    opacity: 0.8 !important;
    border-radius: 2px !important;
}

.el-date-table td span {
    border-radius: 0% !important;
}

.el-date-table td.selected div {
    border-radius: 0% !important;
}

.el-date-table td.start-date div {
    border-top-left-radius: 0px !important;
    border-bottom-left-radius: 0px !important;
}

.el-date-table td.end-date div {
    border-top-right-radius: 0px !important;
    border-bottom-right-radius: 0px !important;
}
.el-date-editor.el-input__inner:hover {
    // border-color:red !important;
}