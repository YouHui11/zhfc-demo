@mixin zhfc-page {
    position: relative;
    text-align: right;
    color: $primary-text-color;

    .zhfc-total {
        position: absolute;
        left: 5px;
        font-weight: 400;
    }

    // button,
    // .el-pagination__editor,
    // .el-pagination__sizes,
    // .el-input--mini .el-input__inner,
    // .el-pagination__jump {
    //     height: 26px;
    //     line-height: 26px;
    // } 

    .el-pager {
        font-weight: normal;

        li {
            padding: 0;
            min-width: 26px;
            height: 26px;
            line-height: 26px;
            border-radius: 2px;
            margin: 0 2px;

            &.active {
                color: #fff;
                background-color: #1890FD;
            }
        }
    }

    .el-pagination__jump {
        .el-input {
            width: 45px;
            margin: 0 8px;
        }

        .el-input__inner {
            border-radius: 2px;
            border: 1px solid rgba(0, 0, 0, 0.15);
            color: rgba(0, 0, 0, 0.25);

            &:hover {
                border: 1px solid $primary-color;
            }

            &:focus {
                border: 1px solid $primary-color;
            }
        }
    }

    .el-pagination__sizes::before {
        content: '每页显示';
        margin-right: 3px;
        margin-left: 24px;
        clear: both;
    }

    .el-pagination__sizes::after {
        content: '条';
        margin-left: 3px;
        clear: both;
    }

    .el-pagination__sizes {
        margin-left: 10px;
        margin-right: 0;
        padding-right: 0;

        .el-input__inner {
            border-radius: 2px;
            border: 1px solid rgba(0, 0, 0, 0.15);

            &:hover {
                border: 1px solid $primary-color;
            }

            &:focus {
                border: 1px solid $primary-color;
            }

        }
    }

    .el-pagination__total {
        float: left;
    }

    &.el-pagination--small {
        .el-pager li {
            min-width: 22px;
            height: 22px;
            line-height: 22px;
        }

        .el-select .el-input .el-input__inner {
            height: 22px;
        }

        .el-input__suffix-inner {
            display: inline-block;
        }

        .el-select__caret {
            line-height: 24px;
        }
    }

}

.zhfc-pagination.el-pagination {
    @include zhfc-page;
}

.zhfc-pagination .el-pagination {
    @include zhfc-page;
}