::-webkit-scrollbar-track-piece {
    background-color: transparent;
}

::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}

::-webkit-scrollbar-thumb {
    background-color: rgba(144, 147, 153, 0.6);
    height: 50px;
    border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
    background-color: rgb(144, 147, 153);
}
